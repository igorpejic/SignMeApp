<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp" >

    <TextView
        android:id="@+id/txt_count"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/circle"
        android:fontFamily="sans-serif-thin"
        android:gravity="center"
        android:textColor="@color/signme_yellow"
        android:textSize="30sp" />

    <RelativeLayout
        android:id="@+id/rl_name_date_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/txt_count" >

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:textColor="@drawable/listview_title_text_color"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/txt_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_name"
            android:layout_marginTop="-8dp"
            android:fontFamily="sans-serif-light"
            android:textColor="@drawable/listview_subtitle_text_color"
            android:textSize="22sp" />
    </RelativeLayout>

</RelativeLayout>